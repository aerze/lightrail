{
  "name": "lightrail-js",
  "version": "0.0.1",
  "description": "An opinionated, minimal web framework extending ExpressJS.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aerze/lightrail.git"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "express"
  ],
  "author": "Abby Suarez <abby@mythril.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aerze/lightrail/issues"
  },
  "homepage": "https://github.com/aerze/lightrail#readme",
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "express": "^4.16.4"
  }
}
